<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black_0</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:immersive">true</item>
        <!--<item name="android:windowBackground">@drawable/ic_android_man</item>-->
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/blue_0</item>
        <item name="colorControlActivated">@color/blue_0</item>
        <item name="android:textCursorDrawable">@color/blue_0</item>
        <item name="android:textColor">@color/blue_0</item>
        <item name="android:textColorHint">@color/blue_0</item>
        <item name="android:textColorHighlight">@color/blue_0</item>
    </style>
</resources>
