<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_drag_hovered="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/blue_0"/>
            <stroke android:color="@color/blue_0" android:width="2dp"/>
        </shape>
    </item>

    <item android:state_drag_hovered="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/grey_1"/>
            <stroke android:color="@color/grey_1" android:width="2dp"/>
        </shape>
    </item>
</selector>